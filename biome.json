{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignoreUnknown": false,
    "ignore": ["node_modules", "build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineWidth": 88,
    "lineEnding": "lf"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useExplicitType": "off",
        "useComponentExportOnlyModules": "off",
        "useSortedClasses": "off",
        "useImportRestrictions": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "useNamingConvention": "off"
      },
      "performance": {
        "noReExportAll": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
